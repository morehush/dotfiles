#!/bin/bash

entries="󰗼 Exit\n Lock\n⇠ Logout\n⏾ Suspend\n⭮ Reboot\n⏻ Shutdown"

selected=$(echo -e $entries|wofi --height=300 --dmenu --cache-file /dev/null | awk '{print tolower($2)}')

case $selected in
  exit)
    killhypr;;
  lock)
    swaylock;;
  logout)
    pkill -u $USER;;
  suspend)
    exec systemctl suspend;;
  reboot)
    exec systemctl reboot;;
  shutdown)
    exec systemctl poweroff;;
    # it used to be poweroff -i
esac
