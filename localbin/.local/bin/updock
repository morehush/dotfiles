#!/bin/bash

tkmedia=$HOME/docker/tkmedia

rsync -turPh $HOME/ssd/Sync/dockersrv/tkmedia/.env $tkmedia/
rsync -turPh $HOME/ssd/Sync/dockersrv/tkmedia/docker-compose.yml $tkmedia/
rsync -turPh $HOME/ssd/Sync/dockersrv/piped/docker-compose.yml $HOME/docker/piped/
rsync -turPh $HOME/ssd/Sync/dockersrv/portainer/docker-compose.yml $HOME/docker/portainer/
rsync -turPh $HOME/ssd/Sync/dockersrv/dockge/docker-compose.yml $HOME/docker/dockge/
rsync -turPh $HOME/ssd/Sync/dockersrv/plex/docker-compose.yml $HOME/docker/plex/


cd $tkmedia
docker compose pull
docker compose up -d --remove-orphans
# docker ps --format '{{.Names}}'
docker image prune -af
